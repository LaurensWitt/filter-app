

.row
  .col-md-4.col-sm-6
    = simple_form_for @subscription do |f|
      .panel.panel-primary
        .panel-body
          = f.input :email, as: :string
          = f.input :categories, collection: Category.select_collection, as: :check_boxes
          = f.input :interval, as: :radio_buttons, collection: [:weekly, :biweekly, :monthly]
          = f.input :limit, as: :radio_buttons, collection: %w[10 25 50 100]
          = f.submit 'Abonnieren', class: 'btn btn-primary'
  .col-md-8.col-sm-6
