- cache twitter_source_item do
  .item.twitter-item{data: twitter_source_item.to_data}
    %br
    .sub
      = render "news_items/source", source: twitter_source_item.source
      &ndash;
      %span.date(data-time="#{twitter_source_item.published_at.to_i}" title="#{l twitter_source_item.published_at}")
        = l twitter_source_item.published_at, format: :short
      &ndash;
      %span.categories
        = twitter_source_item.categories.pluck(:name).to_sentence

      %blockquote.twitter-tweet
        %p= auto_link twitter_source_item.title.html_safe, link: :all, html: {target:"_blank", rel:"nofollow"}
        &mdash;
        = link_to 'auf Twitter', twitter_source_item.url

    %ul.share.inline
      %li
        %i.icon-twitter
        = twitter_source_item.retweets
      %li
        %i.icon-file-text-alt(title='Anzahl Worte (ca.)')
        = twitter_source_item.word_length

