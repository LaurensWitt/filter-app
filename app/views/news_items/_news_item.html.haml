.item
  %h3.title
    = link_to news_item.url do
      = news_item.title
  .sub
    = render "news_items/source", source: news_item.source
    &ndash;
    = l news_item.published_at


  .body
    = news_item.teaser
  %ul.share.inline
    %li
      %i.icon-facebook
      = news_item.fb_likes
    %li
      %i.icon-twitter
      = news_item.retweets
    %li
      %i.icon-linkedin
      = news_item.linkedin
    %li
      XING
      = news_item.xing


